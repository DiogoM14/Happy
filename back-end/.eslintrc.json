{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
      "standard",
			"plugin:@typescript-eslint/recommended",
			"prettier/@typescript-eslint",
    	"plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
				"@typescript-eslint",
				"prettier"
    ],
    "rules": {
			"prettier/prettier": "error",
        "import/extensions": [
	      	"error",
	      	"ignorePackages",
	      {
	        "ts": "never"
	      }
	    ],
	    "class-methods-use-this": "off",
	    "@typescript-eslint/camelcase": "off",
	    "@typescript-eslint/no-unused-vars": [
	      "error",
	      {
	        "argsIgnorePattern": "_"
	      }
	    ]
    },			"import/extensions": [
	      "error",
	      "ignorePackages",
	      {
	        "ts": "never"
	      }
	    ],
	    "class-methods-use-this": "off",
	    "@typescript-eslint/camelcase": "off",
	    "@typescript-eslint/no-unused-vars": [
	      "error",
	      {
	        "argsIgnorePattern": "_"
	      }
	    ]
}
